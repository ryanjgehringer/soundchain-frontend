{
  "presets": [
    "react",
    "env",
    "es2015",
    "stage-0",
  ],
  "compact" : false,
  "plugins": [
    ["babel-root-import", { "rootPathSuffix": "src/js" }],
    "react-hot-loader/babel",
    "transform-object-rest-spread",
    "transform-decorators-legacy",
    "transform-class-properties"
  ],
  "env": {
    "production": {
      "presets": [
        "react-optimize",
        ["env", {
          "targets": {
            "uglify": false,
            "browsers": [
              "last 2 versions",
              "safari >= 8",
              "ie >= 10",
              "ios >= 8"
            ]
          },
          "loose": true,
          "useBuiltIns": true
        }]
      ]
    },
    "test": {
      "presets": ["env"],
      "plugins": [
        ["babel-root-import", { "rootPathSuffix": "src/js" }],
        "transform-object-rest-spread",
        "transform-class-properties"
      ]
    }
  }
}